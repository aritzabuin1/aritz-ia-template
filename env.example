# API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_URL=mongodb://localhost:27017/dbname  # Si usas MongoDB
# DATABASE_URL=sqlite:///./database.db  # Si usas SQLite

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development  # development | staging | production
DEBUG=True  # True en dev, False en prod
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4  # Número de workers en producción

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # Requests por minuto por IP
RATE_LIMIT_WINDOW=60  # Segundos

# Cost Monitoring
COST_ALERT_THRESHOLD_DAILY=100  # USD
COST_ALERT_THRESHOLD_MONTHLY=2000  # USD

# External Services
# SENDGRID_API_KEY=...  # Si usas email
# SLACK_WEBHOOK_URL=...  # Si usas notificaciones Slack
# SENTRY_DSN=...  # Si usas Sentry para error tracking

# Google OAuth (si aplica)
# GOOGLE_CLIENT_ID=...
# GOOGLE_CLIENT_SECRET=...
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Modal / Railway (deployment)
# MODAL_TOKEN_ID=...
# MODAL_TOKEN_SECRET=...

# Feature Flags
ENABLE_PROMPT_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_HEALTH_CHECKS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Timeouts (seconds)
API_TIMEOUT_OPENAI=30
API_TIMEOUT_ANTHROPIC=30
API_TIMEOUT_DATABASE=5

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1  # Base delay, se multiplica exponencialmente
