[
  {
    "id": "test_001",
    "name": "Temperature anomaly - Espresso too cold",
    "description": "Detect when espresso temperature is below optimal range",
    "input": {
      "temperature": 88,
      "optimal_range": [90, 92],
      "coffee_type": "espresso"
    },
    "expected_output": {
      "alert_type": "quality",
      "contains": [
        "88°C",
        "90-92°C",
        "Ajusta"
      ]
    }
  },
  {
